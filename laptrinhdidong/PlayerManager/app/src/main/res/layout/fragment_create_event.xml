<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context=".MainScreens.CreateEventFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_splash"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6f000000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_30sdp"
                android:textSize="@dimen/_30ssp"
                android:layout_marginBottom="@dimen/_40sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:padding="@dimen/_10sdp"
                android:hint="Event Name"
                android:textColorHint="#b9ffffff"
                android:textColor="#fff"
                android:inputType="textPersonName"
                android:background="@drawable/app_edittext_drawable"
                />

            <TextView
                android:id="@+id/selectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:padding="@dimen/_10sdp"
                android:hint="Select Date"
                android:drawableEnd="@drawable/ic_date_24dp"
                android:textColorHint="#b9ffffff"
                android:textSize="@dimen/_14ssp"
                android:textColor="#fff"
                android:inputType="none"
                android:background="@drawable/app_edittext_drawable"/>

            <EditText
                android:id="@+id/eventDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:hint="Time In Minutes"
                android:textColorHint="#b9ffffff"
                android:textColor="#fff"
                android:inputType="numberDecimal"
                android:background="@drawable/app_edittext_drawable"
                />
            <EditText
                android:id="@+id/eventCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:hint="Capacity"
                android:textColorHint="#b9ffffff"
                android:textColor="#fff"
                android:inputType="numberDecimal"
                android:background="@drawable/app_edittext_drawable"
                />

            <Button
                android:id="@+id/saveEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/app_button_drawable"
                android:textColor="#fff"
                android:textSize="@dimen/_18ssp"
                android:textAllCaps="false"
                android:text="Create"
                />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
